@model List<AmanAdams.ST10290748.PROG7312.POE.Models.IssueModel>

@{
    ViewData["Title"] = "Service Request Status";
    var userRole = Context.Session.GetString("UserRole");
}

<h2 style="text-align:center; color:cadetblue;">Service Request Status</h2>




@if (userRole == "Admin" || userRole == "Employee")
{
    <form asp-controller="Account" asp-action="Logout" method="post" class="bottom-left-logout">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
}
<!-- Search Section -->
<div class="search-events">
    <h3>Search Request</h3>
    <form asp-action="Search" asp-controller="Issues" method="post" class="search-bar-form">
        <input type="text" name="requestId" placeholder="Enter your Request ID..." required />
        <button type="submit" class="action-btn submit-btn">Search</button>
    </form>
</div>

<!-- Success Tooltip -->
@if (TempData["SuccessMessage"] != null)
{
    <div id="success-tooltip" class="tooltip">@TempData["SuccessMessage"]</div>
    <script>
        setTimeout(() => document.getElementById('success-tooltip').style.display = 'none', 3000);
    </script>
}
<!-- Display Issues in Table -->
<div class="event-list-full">
    <h3>Reported Issues</h3>

    <div class="graph-button-container">
        <a asp-controller="Issues" asp-action="GraphView" class="graph-btn">View Graph Overview</a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <table class="issues-table">
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Date Created</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var issue in Model)
                {
                    <tr>
                        <td>@issue.RequestId</td>
                        <td>@issue.Category</td>
                        <td>@issue.Description</td>
                        <td>
                            @{
                                var role = Context.Session.GetString("UserRole");
                            }

                            @if (role == "Admin" || role == "Employee")
                            {
                                <form asp-action="UpdateStatus" asp-controller="Issues" method="post" style="display:flex; gap:5px;">
                                    <input type="hidden" name="requestId" value="@issue.RequestId" />
                                    <select name="status" style="padding:5px; border-radius:5px;">
                                        <option value="Pending" selected="@(issue.Status == "Pending")">Pending</option>
                                        <option value="In Progress" selected="@(issue.Status == "In Progress")">In Progress</option>
                                        <option value="Resolved" selected="@(issue.Status == "Resolved")">Resolved</option>
                                    </select>
                                    <button type="submit" class="action-btn submit-btn" style="padding:5px 10px;">Update</button>

                                </form>
                            } 
                            else
                            {
                                <span class="status-label @(issue.Status == "Resolved" ? "status-resolved" : "status-pending")">
                                    @issue.Status
                                </span>
                            }
                        </td>
                        <td>@issue.CreatedAt.ToShortDateString()</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p style="text-align:center;">No reported issues found.</p>
    }
</div>

<!-- Back Button -->
<div class="form-buttons" style="text-align:center;">
    <a asp-controller="Home" asp-action="Index" class="back-btn">Back to Main Menu</a>
</div>


