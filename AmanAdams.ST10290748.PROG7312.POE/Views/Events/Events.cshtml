@{
    ViewData["Title"] = "Local Events And Announcements";
}

<div class="coming-soon">
    <h2>Local Events and Announcements</h2>
    <p>This feature is coming soon. Stay tuned for updates!</p>
</div>


<div class="form-buttons">
    <a asp-controller="Home" asp-action="Index">
        <button type="button" class="action-btn cancel-btn">Back to Main Menu</button>
    </a>
</div>

<style>
    .coming-soon {
        text-align: center;
        padding: 60px 20px;
    }

        .coming-soon h2 {
            font-size: 28px;
            margin-bottom: 15px;
            color: cadetblue;
        }

        .coming-soon p {
            font-size: 18px;
            color: #555;
        }

    /* Flexbox for buttons */
    .form-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

    .action-btn {
        flex: 1;
        padding: 15px;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s, opacity 0.2s;
        color: #fff;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.2);
    }

        .action-btn:hover {
            opacity: 1;
            transform: scale(1.05);
        }

    .submit-btn {
        background-color: cadetblue;
    }

    .cancel-btn {
        background-color: lightslategrey;
    }

    .report-form textarea {
        resize: none;
    }
</style>

